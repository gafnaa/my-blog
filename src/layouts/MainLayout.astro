---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Gafna Al Faatiha Prabowo's Portfolio Website" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mona+Sans:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/src/styles/global.css" />

    <!-- Logo  -->
     <link rel="icon" type="image/svg+xml" sizes="16x16" href="/icon/logo1.svg" />
      <link rel="icon" type="image/svg+xml" sizes="32x32" href="/icon/logo2.svg" />
      <link rel="icon" type="image/svg+xml" sizes="48x48" href="/icon/logo3.svg" />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
    <script is:inline>
      const pages = [
        '/',
        '/about',
        '/projects',
        '/posts',
        '/achievements'
      ];
      let touchstartX = 0;
      let touchendX = 0;

      function checkDirection() {
        const threshold = 50; // Minimum swipe distance
        const currentIndex = pages.indexOf(window.location.pathname);

        if (touchendX < touchstartX - threshold) {
          // Swiped left
          if (currentIndex < pages.length - 1) {
            window.location.href = pages[currentIndex + 1];
          } else {
            // Loop back to the first page
            window.location.href = pages[0];
          }
        }

        if (touchendX > touchstartX + threshold) {
          // Swiped right
          if (currentIndex > 0) {
            window.location.href = pages[currentIndex - 1];
          } else {
            // Loop back to the last page
            window.location.href = pages[pages.length - 1];
          }
        }
      }

      document.addEventListener('touchstart', e => {
        touchstartX = e.changedTouches[0].screenX;
      });

      document.addEventListener('touchend', e => {
        touchendX = e.changedTouches[0].screenX;
        checkDirection();
      });
    </script>
  </body>
</html>
