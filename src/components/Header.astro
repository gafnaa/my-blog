---
const navItems = [
  { name: 'home', path: '/' },
  { name: 'posts', path: '/posts' },
  { name: 'projects', path: '/projects' },
  { name: 'achievements', path: '/achievements' },
  { name: 'about', path: '/about' }
];

const currentPath = Astro.url.pathname;
---

<header>
  <div class="header-container">
    <div class="logo">
      <a href="/">Gafnaworks</a>
    </div>
    <nav>
      <ul>
        {navItems.map(item => (
          <li>
            <a 
              href={item.path} 
              class={currentPath === item.path || 
                    (item.path !== '/' && currentPath.startsWith(item.path)) 
                    ? 'active' : ''}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  header {
    padding: 1.5rem 0;
  }
  
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo a {
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--text-color);
  text-decoration: none;
  transition: color 0.3s ease;
}

.logo a:hover {
  color: #00FFC3; /* ganti dengan warna biru yang kamu pakai */
}
  
  nav ul {
    display: flex;
    list-style: none;
    gap: 1.5rem;
  }
  
  nav a {
    font-size: 1rem;
    text-decoration: none;
    color: var(--text-color);
    opacity: 0.7;
    transition: all 0.2s ease;
    padding-bottom: 0.25rem;
  }
  
  nav a:hover {
    opacity: 1;
  }
  
  nav a.active {
    opacity: 1;
    border-bottom: 2px solid var(--accent-color);
  }
  
  @media (max-width: 768px) {
    .header-container {
      flex-direction: column;
      gap: 1rem;
    }
    
    nav ul {
      gap: 1rem;
    }
  }
</style>