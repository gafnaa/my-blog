<MainLayout 
  title="Gafnaa - Projects" 
  description="Some projects that I have made as a web developer and motion designer"
  image="/sankya.jpg"
  url="/projects"
>
  <div class="projects-container">
    <h1>Projects</h1>
    <p class="intro">Some projects that I have made as a web developer and motion designer</p>
    <div style="height: 1px; background-color: white; margin-bottom: 2rem;"></div>
    <h2>Web</h2>
    <p class="intro">also you can check my github for many other project</p>
    
    <div class="projects-grid">
      {projects.map(project => (
        <div class="project-card">
          <div class="project-image">
            <div class="image-placeholder"></div> {/* Placeholder for the image */}
            {/* <img src={project.image} alt={project.title} /> */}
          </div>
          <div class="project-content">
            <h3>{project.title}</h3>
            <p>{project.description}</p>
            
            {/* Removed tech-stack and project-links as per new project structure */}
          </div>
        </div>
      ))}
    </div>

    <h2 style="margin-top: 4rem;">Video</h2>
    <p class="intro">A selection of motion graphics and video projects.</p>

    <div class="videos-grid">
      {videos.map(video => (
        <div class="video-wrapper">
          <iframe 
            src={video.url} 
            title={video.title} 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen
          ></iframe>
          <h3>{video.title}</h3>
          {/* Removed video description */}
        </div>
      ))}
    </div>
  </div>
</MainLayout>

<style>
  .projects-container {
    max-width: 1100px; /* Adjusted max-width to accommodate two 524px cards + gap */
    margin: 0 auto;
  }
  
  h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 1.5rem;
    color: white; /* Changed color to white */
  }
  
  .intro {
    margin-bottom: 2rem;
    opacity: 0.8;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Explicitly 2 columns */
    gap: 2rem;
  }
  
  .project-card {
    border-radius: 12px;
    overflow: hidden;
    background-color: #1a1a1a;
    transition: transform 0.3s ease;
    width: 524px; /* Set fixed width */
    height: 220px; /* Increased height */
    display: flex; /* Use flexbox to control internal layout */
    flex-direction: column;
  }
  
  .project-card:hover {
    transform: translateY(-5px);
  }

  .project-content {
    background-color: #0C0D14;
    padding: 1rem 1.5rem; /* Adjusted padding */
    flex-grow: 1; /* Allow content to take remaining space */
  }
  
  .project-image {
    background-color: #333;
    height: 120px; /* Adjusted height for image placeholder */
    display: flex;
    justify-content: center;
    align-items: center;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    background-color: #333; /* Ensure the placeholder itself has the background */
  }

  /* Video Section Styles */
  .videos-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columns for videos */
    gap: 2rem;
    margin-top: 2rem;
  }

  .video-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
    background-color: #000; /* Fallback background */
    border-radius: 12px;
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 12px;
  }

  .video-wrapper h3 {
    margin-top: 0.5rem;
    margin-bottom: 0.25rem;
  }

  /* Removed .video-wrapper p style */

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr; /* Single column on mobile */
    }

    .project-card {
      width: auto; /* Allow card to take full width */
    }

    .videos-grid {
      grid-template-columns: 1fr; /* Single column on mobile */
    }
  }
