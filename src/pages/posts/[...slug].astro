---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import { SITE_TITLE } from '../../consts';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  // Sort posts by date descending
  posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  
  return posts.map((post, i) => ({
    params: { slug: post.slug },
    props: {
      post,
      prevPost: i + 1 < posts.length ? posts[i + 1] : null,
      nextPost: i > 0 ? posts[i - 1] : null,
    },
  }));
}

const { post, prevPost, nextPost } = Astro.props;
const { Content, headings } = await post.render();

// Generate Breadcrumbs from slug
const slugParts = post.slug.split('/').filter(p => p);
const breadcrumbs = slugParts.map((part, index) => {
  const path = `/posts/event/${slugParts.slice(0, index + 1).join('/')}`;
  const text = part.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
  return { text, path };
});

// Prepare data for Left Sidebar (Global TOC)
const allPosts = await getCollection('blog');
const groupedPosts = allPosts.reduce((acc, p) => {
  const event = p.data.event || 'Other';
  const category = p.data.category || 'Uncategorized';
  
  if (!acc[event]) acc[event] = {};
  if (!acc[event][category]) acc[event][category] = [];
  acc[event][category].push(p);
  return acc;
}, {} as Record<string, Record<string, typeof allPosts>>);

// Helper to check if a group should be open (contains current post)
const currentSlug = post.slug;
---

<MainLayout
  title={`${post.data.title} | ${SITE_TITLE}`}
  description={post.data.description}
  image={post.data.heroImage}
  url={`/posts/${post.slug}`}
>
  <div class="post-layout">
    <!-- Left Sidebar: Global Navigation -->
    <aside class="sidebar-left">
      <nav class="global-toc">
        {Object.keys(groupedPosts).map(event => (
          <div class="event-group">
            <h3 class="event-title">{event}</h3>
            {Object.keys(groupedPosts[event]).map(category => (
              <div class="category-group">
                <h4 class="category-title">{category}</h4>
                <ul>
                  {groupedPosts[event][category].map(p => (
                    <li>
                      <a href={`/posts/${p.slug}`} class={currentSlug === p.slug ? 'active' : ''}>
                        {p.data.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        ))}
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="post-content">
      <nav aria-label="Breadcrumb">
        <ol class="breadcrumbs">
          <li><a href="/posts">Posts</a></li>
          {breadcrumbs.slice(0, -1).map(crumb => (
            <li><span>&rsaquo;</span> <a href={crumb.path}>{crumb.text}</a></li>
          ))}
        </ol>
      </nav>

      <article>
        <h1 class="title">{post.data.title}</h1>
        <p class="date">
          Published on {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </p>
        <Content />

        <!-- Post Navigation -->
        <nav class="post-navigation">
          {prevPost ? (
            <a href={`/posts/${prevPost.slug}`} class="nav-btn prev">
              <span class="label">Previous</span>
              <span class="nav-title">&lsaquo; {prevPost.data.title}</span>
            </a>
          ) : (
            <div /> /* Empty div to maintain spacing if only Next exists */
          )}
          
          {nextPost && (
            <a href={`/posts/${nextPost.slug}`} class="nav-btn next">
              <span class="label">Next</span>
              <span class="nav-title">{nextPost.data.title} &rsaquo;</span>
            </a>
          )}
        </nav>
      </article>
    </main>

    <!-- Right Sidebar: Table of Contents -->
    <aside class="sidebar-right">
      <TableOfContents headings={headings} />
    </aside>
  </div>
</MainLayout>

<style>
  /* Layout utama halaman post */
  .post-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 1400px; /* Increased max-width for 3 columns */
    margin: 2rem auto;
    padding: 0;
  }

  /* Sidebar styling */
  aside {
    display: none; /* Hidden on mobile */
  }

  .post-content {
     min-width: 0; /* Crucial for CSS Grid to prevent content blowout */
  }
  
  article img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 1.5rem auto;
    border-radius: 8px; /* Optional: adds nice rounded corners */
  }

  /* Sidebar Left (Global TOC) Styling */
  .sidebar-left {
    font-size: 0.9rem;
  }
  .global-toc {
    position: sticky;
    top: 2rem;
    max-height: calc(100vh - 4rem);
    overflow-y: auto;
    padding-right: 1rem;
  }
  .event-title {
    font-size: 1rem;
    color: var(--accent-color);
    margin: 1.5rem 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .event-group:first-child .event-title {
    margin-top: 0;
  }
  .category-title {
    font-size: 0.85rem;
    color: #8b949e;
    margin: 0.8rem 0 0.3rem 0;
    font-weight: 600;
  }
  .category-group ul {
    list-style: none;
    padding-left: 0.5rem;
    border-left: 1px solid var(--divider-color);
    margin: 0;
  }
  .category-group li a {
    display: block;
    padding: 0.3rem 0 0.3rem 0.8rem;
    color: #e6edf3;
    text-decoration: none;
    transition: color 0.2s;
    font-size: 0.9em;
    line-height: 1.3;
  }
  .category-group li a:hover {
    color: var(--accent-color);
  }
  .category-group li a.active {
    color: var(--accent-color);
    font-weight: bold;
    border-left: 2px solid var(--accent-color);
    margin-left: -0.5rem;
    padding-left: calc(0.8rem + 0.5rem - 2px); /* Adjust padding to keep alignment */
    background: rgba(0, 200, 150, 0.05);
  }

  /* Post Navigation Styling */
  .post-navigation {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--divider-color);
    display: flex;
    justify-content: space-between;
    gap: 1rem;
  }
  .nav-btn {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    border: 1px solid var(--divider-color);
    border-radius: 8px;
    background: var(--card-background);
    color: var(--text-color);
    text-decoration: none;
    transition: all 0.2s;
    max-width: 45%;
    flex: 1;
  }
  .nav-btn:hover {
    border-color: var(--accent-color);
    background: rgba(0, 200, 150, 0.05);
  }
  .nav-btn.prev {
    align-items: flex-start;
    text-align: left;
  }
  .nav-btn.next {
    align-items: flex-end;
    text-align: right;
  }
  .nav-btn .label {
    font-size: 0.8rem;
    color: #8b949e;
    margin-bottom: 0.3rem;
  }
  .nav-btn .nav-title {
    font-weight: 600;
    font-size: 1rem;
    color: var(--accent-color);
  }

  /* Layout Breakpoints */
  @media (min-width: 1024px) {
    aside {
      display: block;
    }
    
    .post-layout {
      grid-template-columns: 240px 1fr auto; /* Right col auto to push TOC right */
      gap: 3rem;
    }
  }

  /* Breadcrumbs & Typography (Existing styles preserved/adapted) */
  .breadcrumbs {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    font-size: 0.9rem;
    opacity: 0.8;
  }
  .breadcrumbs li { display: flex; align-items: center; }
  .breadcrumbs a { color: inherit; text-decoration: none; }
  .breadcrumbs a:hover { text-decoration: underline; }
  .breadcrumbs span { margin: 0 0.5rem; }

  .title {
    font-size: 2.8rem;
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }
  .date {
    font-size: 0.9rem;
    opacity: 0.7;
    margin-bottom: 2rem;
  }

  article :global(h2) {
    font-size: 1.8em;
    margin-top: 2rem;
    padding-bottom: 0.3rem;
    border-bottom: 1px solid var(--divider-color);
  }
  article :global(h3) {
    font-size: 1.4em;
    margin-top: 1.5rem;
  }
  article :global(p) {
    margin-bottom: 1.5rem;
    text-align: justify;
  }
  article :global(ul), article :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    margin-left: 0.5rem;
  }
  article :global(ul) { list-style-type: disc; }
  article :global(ol) { list-style-type: decimal; }
  article :global(li) {
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
  }

  article :global(blockquote) {
    border-left: 4px solid var(--accent-color);
    background: linear-gradient(to right, rgba(0, 200, 150, 0.05), transparent);
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    border-radius: 0 8px 8px 0;
    font-style: italic;
    color: #cbd5e1;
  }

  article :global(blockquote) :global(p) {
    margin-bottom: 0;
  }

  /* Link styling within Markdown content */
  article :global(a) {
    color: var(--accent-color);
    text-decoration: underline;
    text-underline-offset: 4px;
    transition: all 0.2s ease;
  }

  article :global(a):hover {
    text-decoration: none;
    opacity: 0.8;
    background-color: rgba(0, 200, 150, 0.1); /* Subtle highlight on hover */
    border-radius: 4px;
    padding: 0 4px;
    margin: 0 -4px; /* Adjust for padding shift */
  }
</style>

<script>
  function addCopyButtons() {
    // Find all code blocks
    const codeBlocks = document.querySelectorAll('figure[data-rehype-pretty-code-figure]');

    codeBlocks.forEach((block) => {
      // Check if button already exists
      if (block.querySelector('.copy-code-btn')) return;

      // Extract text content from the code element
      const pre = block.querySelector('pre');
      if (!pre) return;
      
      const code = pre.querySelector('code');
      if (!code) return;

      // Create button
      const button = document.createElement('button');
      button.className = 'copy-code-btn';
      button.setAttribute('aria-label', 'Copy code');
      button.innerHTML = `
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
      `;

      // Copy Functionality
      button.addEventListener('click', async () => {
        try {
            // Get text content, filtering out line numbers if they exist in separate elements or just grabbing raw text
            // Since the CSS resets content for line numbers (pseudo-elements), innerText usually captures them if they are in the DOM, 
            // but rehype-pretty-code line numbers are often pseudo-elements or specific spans.
            // Let's rely upon navigator.clipboard.writeText.
            
            // A robust way for rehype-pretty-code is to grab textContent of the code element.
            // If line numbers are generated via CSS counters, they won't be in textContent.
            // If they are spans, we might need to filter.
            // Looking at code-block.css, line numbers are `::before` pseudo-elements on `[data-line]`.
            // So textContent should be safe (it won't include pseudo-elements).
            
          const text = code.textContent || '';
          await navigator.clipboard.writeText(text);

          // Visual Feedback
          button.innerHTML = `
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          `;
          button.classList.add('copied');

          setTimeout(() => {
            button.innerHTML = `
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
              </svg>
            `;
            button.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy!', err);
        }
      });

      block.appendChild(button);
    });
  }

  // Run on initial load and view transitions
  document.addEventListener('astro:page-load', addCopyButtons);
</script>
