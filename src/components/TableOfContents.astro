---
import type { MarkdownHeading } from 'astro';

interface Props {
  headings: MarkdownHeading[];
}

const { headings } = Astro.props;
const filteredHeadings = headings.filter(({ depth }) => depth > 1 && depth < 4); // Ambil h2 dan h3
---

<aside class="toc">
  <h3>On this page</h3>
  <ul>
    {filteredHeadings.map(heading => (
      <li class={`depth-${heading.depth}`}>
        <a href={`#${heading.slug}`}>{heading.text}</a>
      </li>
    ))}
  </ul>
</aside>

<style>
  .toc {
    position: sticky;
    top: 2rem;
  }
  .toc h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .toc ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .toc li a {
    color: inherit;
    text-decoration: none;
    opacity: 0.7;
    font-size: 0.9rem;
    display: block;
    padding: 0.25rem 0;
    transition: opacity 0.2s;
  }
  .toc li a:hover {
    opacity: 1;
  }
  .toc li.depth-3 {
    padding-left: 1rem;
  }
</style>