---
import MainLayout from '../layouts/MainLayout.astro';

// Demo projects data
const projects = [
  {
    title: 'Personal Portfolio Website',
    description: 'A personal portfolio website built with Astro and TailwindCSS.',
    technologies: ['Astro', 'TailwindCSS', 'TypeScript'],
    github: 'https://github.com/gafnaa/portfolio',
    demo: 'https://gafnaa.com',
    image: '/api/placeholder/800/400'
  },
  {
    title: 'CTF Challenge Platform',
    description: 'A platform for hosting CTF challenges built with Next.js and Firebase.',
    technologies: ['Next.js', 'Firebase', 'TailwindCSS'],
    github: 'https://github.com/gafnaa/ctf-platform',
    demo: 'https://ctf.gafnaa.com',
    image: '/api/placeholder/800/400'
  },
  {
    title: 'Motion Graphics Portfolio',
    description: 'A portfolio showcasing motion graphics work created in After Effects.',
    technologies: ['After Effects', 'Cinema 4D', 'Photoshop'],
    github: 'https://github.com/gafnaa/motion-portfolio',
    demo: 'https://motion.gafnaa.com',
    image: '/api/placeholder/800/400'
  }
];
---

<MainLayout title="Gafnaa - Projects">
  <div class="projects-container">
    <h1>Projects</h1>
    <p class="intro">A selection of projects I've worked on as a web developer and motion designer.</p>
    
    <div class="projects-grid">
      {projects.map(project => (
        <div class="project-card">
          <div class="project-image">
            <img src={project.image} alt={project.title} />
          </div>
          <div class="project-content">
            <h3>{project.title}</h3>
            <p>{project.description}</p>
            
            <div class="tech-stack">
              {project.technologies.map(tech => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>
            
            <div class="project-links">
              <a href={project.github} target="_blank" rel="noopener noreferrer" class="project-link">GitHub</a>
              <a href={project.demo} target="_blank" rel="noopener noreferrer" class="project-link">Live Demo</a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</MainLayout>

<style>
  .projects-container {
    max-width: 1000px;
    margin: 0 auto;
  }
  
  h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .intro {
    margin-bottom: 2rem;
    opacity: 0.8;
  }
  
  .projects-grid {
    display: grid;
    gap: 2rem;
  }
  
  .project-card {
    border-radius: 8px;
    overflow: hidden;
    background-color: rgba(255, 255, 255, 0.05);
    transition: transform 0.3s ease;
  }
  
  .project-card:hover {
    transform: translateY(-5px);
  }
  
  .project-image img {
    width: 100%;
    height: auto