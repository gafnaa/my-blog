---
import MainLayout from '../layouts/MainLayout.astro';
import ProfileSection from '../components/ProfileSection.astro';
import PostCard from '../components/PostCard.astro';
import Button from '../components/Button.astro';
import GitHubCalendarWrapper from '../components/GitHubCalendarWrapper.tsx';
import { SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const posts = [];
const seenEvents = new Set();

for (const post of allPosts) {
  const event = post.data.event;
  if (event) {
    if (seenEvents.has(event)) continue;
    seenEvents.add(event);
  }
  posts.push(post);
  if (posts.length >= 3) break;
}
---

<MainLayout 
  title="Gafnaa - Home" 
  description={SITE_DESCRIPTION} 
  image="/sankya.jpg" 
  url="/"
>
  <ProfileSection />
  
  <div class="bio-section">
    <p>
      Hi! I am a frontend developer who also has a great passion in the world of cyber security as a CTF player. In addition to building attractive and responsive interfaces, I like to challenge myself with various cybersecurity competitions to hone my skills and insights. On the other hand, I also enjoy creativity through motion design, creating lively and communicative visuals. This combination allows me to work with focus but still expressive, always trying to present cool and safe work.
    </p>
  </div>

  <section class="contributions-section">
    <h2>GitHub Contributions</h2>
    <div class="graph-container">
      <GitHubCalendarWrapper client:visible />
    </div>
    <div class="github-link">
      <a href="https://github.com/gafnaa" target="_blank" rel="noopener noreferrer" class="gh-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
        @gafnaa
      </a>
    </div>
  </section>
  
  <hr />
  
  <section class="recent-posts">
    <h2>Recent Posts</h2>
    
    <div class="posts-container">
      {posts.map(post => (
        <PostCard 
          title={post.data.event || post.data.title}
          date={post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          excerpt={post.data.description}
          url={`/posts/${post.slug}`}
        />
      ))}
    </div>
    
    <div class="more-btn">
      <Button text="More Posts" href="/posts" />
    </div>
  </section>
</MainLayout>

<style>
  .bio-section {
	margin-top: 2rem;
	padding: 2rem 0;
    max-width: fit-content;
    margin: 0 auto;
  }
  
  .bio-section p {
    font-size: 1rem;
    line-height: 1.7;
    opacity: 0.9;
  }
  
  .recent-posts h2 {
    font-size: 1.5rem;
    margin-bottom: 1 rem;
  }
  
  .posts-container {
    margin-bottom: 2rem;
  }
  
  .more-btn {
    display: flex;
    justify-content: center;
  }

  .contributions-section {
    margin-bottom: 2rem;
  }

  .contributions-section h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .graph-container {
    background: #0d1117;
    border: 1px solid #30363d;
    border-radius: 8px;
    padding: 1rem;
    overflow-x: auto; /* Handle overflow on small screens */
    margin-bottom: 1rem;
    display: flex;
    justify-content: center;
    color: #e6edf3; /* Ensure text color is readable */
  }

  .github-link {
    display: flex;
    justify-content: center;
  }

  .gh-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #8b949e;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    border: 1px solid transparent;
  }

  .gh-btn:hover {
    color: #58a6ff;
    background: rgba(88, 166, 255, 0.1);
    border-color: rgba(88, 166, 255, 0.2);
  }
</style>